mixin param(type)
    li
        lable(class=`${type}`)
            input(type=type)
        span value 1
    li
        lable(class=`${type}`)
            input(type=type)
        span value 2
    li
        lable(class=`${type}`)
            input(type=type)
        span value 3
    li
        lable(class=`${type}`)
            input(type=type)
        span value 4
    li
        lable(class=`${type}`)
            input(type=type)
        span value 5

include arrowBottom

div.aside__header
    p.panel-heading.aside__result 26 Results Found
div.menu
    div.field.is-grouped.control
        ul.menu-list.aside__menu
            li
                a.is-active.aside__param Param 1
                    +icon
                ul.aside__values
                    +param("checkbox")
            li
                a.is-active.aside__param Param 2
                    +icon
                ul.aside__values
                    +param("radio")
            li
                a.is-active.aside__param Param 3
                    +icon
                ul.aside__values
                    li.aside__minmax
                        input(type="text" placeholder="min")
                        input(type="text" placeholder="max")
            li
                a.is-active.aside__param Param 4
                    +icon
                ul.aside__values
                    li
                        input(type="text" placeholder="Keyword")
            a(type="text").button.is-primary.aside__button SEARCH




